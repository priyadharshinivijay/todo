<section class="s2">
    <div class="d1">
        <p class="p1">
        <%= section_title %>
        </p>
        <p class="p2"><%=todos.completed?.count%> / <%=todos.count%></p>
    </div>
    <ul>
    <% todos.all.each do |todo| %>
        <li class="l1">
            <label class="ll1">
                <%=form_with(url:"/todos/#{todo.id}",method:"put") do %>
                <input class="c1" 
                type="checkbox"
                name="completed"
                <%= todo.completed ? "checked" : ""%>
                onclick="this.form.submit()"
                />
                <%= todo.todo_text %>
            
                <%end%>
                <% if show_due_date %>
                    <p class="Todoitem"> <%= todo.due_date.to_s(:short)%> </p>
                <%end%>
                <a class="delete" href="javascript:void(0)">
                    <img src="del.jpg">
                </a>
            </label>
            </li>
    <%end%>
        
       
    </ul>
   
</section>